<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/layoutTransactionItem"
    android:layout_marginBottom="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTransactionCategory"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    
    <TextView
        android:id="@+id/tvTransactionTitle"
        android:layout_toEndOf="@+id/ivTransactionCategory"
        android:layout_width="match_parent"
        android:lines="1"
        android:text="Shopping"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:layout_toStartOf="@+id/tvTransactionAmount"
        android:fontFamily="@font/inter_semibold"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTransactionDate"
        android:layout_toEndOf="@+id/ivTransactionCategory"
        android:layout_width="match_parent"
        android:lines="1"
        android:layout_below="@+id/tvTransactionTitle"
        android:text="Shopping"
        android:textSize="15sp"
        android:layout_marginLeft="8dp"
        android:textColor="#8E8E93"
        android:layout_toStartOf="@+id/tvTransactionAmount"
        android:fontFamily="@font/inter_regular"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTransactionAmount"
        android:layout_width="wrap_content"
        android:lines="1"
        android:text="Shopping"
        android:layout_alignParentEnd="true"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_semibold"
        android:layout_height="wrap_content"/>

</RelativeLayout>