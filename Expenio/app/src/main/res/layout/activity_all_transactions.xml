<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AllTransactionsActivity">

    <TextView
        android:id="@+id/tvAllTransactionsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24sp"
        android:fontFamily="@font/inter_regular"
        android:text="Back"
        android:drawablePadding="8dp"
        android:textColor="#007AFF"
        android:drawableStart="@drawable/ic_back_blue"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvAllTransactionsAllTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAllTransactionsBack"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_extra_bold"
        android:gravity="center"
        android:text="All Transactions"
        android:textColor="@color/black"
        android:textSize="34sp" />

    <ImageButton
        android:id="@+id/btnAllTransactionsAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvAllTransactionsAllTransactions"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_plus_blue"
        android:layout_marginHorizontal="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAllTransactions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvAllTransactionsAllTransactions"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp" />
</RelativeLayout>